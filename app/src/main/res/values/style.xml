<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Custom theming for bottom navigation view -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorSurface">@color/white</item>

        <item name="colorOnSurfaceVariant">@color/cardview_dark_background</item>
        <item name="colorSecondaryContainer">@color/colorSecondary</item>
        <item name="textFillColor">@color/cardview_light_background</item>
    </style>

    <style name="body_text_1">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/ubuntu_regular</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="body_text_2">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/ubuntu_regular</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="body_text_secondary">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/ubuntu_regular</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="text_heading_1">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/ubuntu_bold</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="text_heading_2">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/ubuntu_medium</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:includeFontPadding">false</item>

    </style>

</resources>